{% extends 'base.html.twig' %}

{% block body %}
    <h2>Informacje o ocenach</h2>

    <table id="addInfo" class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Ocena</th>
                <td>{{ grade.grade }}</td>
            </tr>
            <tr>
                <th>Uczeń</th>
                <td>{{ grade.idstudent }}</td>
            </tr>
            <tr>
                <th>Przedmiot</th>
                <td>{{ grade.idsubject }}</td>
            </tr>
        </tbody>
    </table>

    <div id="addActions">

            <a href="{{ path('grade_index') }}"  class="btn btn-primary"><i class="fa fa-undo fa-lg"></i> Powrót</a>

            <a href="javascript:print()"  class="btn btn-info"><i class="fa fa-print fa-lg"></i> Drukuj</a>

            <a href="{{ path('grade_edit', { 'id': grade.idgrade }) }}"  class="btn btn-warning"><i class="fa fa-pencil-square fa-lg"></i> Edytuj</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń"  class="btn btn-danger">
            {{ form_end(delete_form) }}

    </div>
{% endblock %}
