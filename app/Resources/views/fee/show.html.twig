{% extends 'base.html.twig' %}

{% block body %}
    <h2>Szczegóły opłaty</h2>

    <table id="addInfo" class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Nazwa</th>
                <td>{{ fee.feename }}</td>
            </tr>
            <tr>
                <th>Kwota</th>
                <td>{{ fee.feevalue }} PLN</td>
            </tr>
            <tr>
                <th>ID</th>
                <td>{{ fee.idfee }}</td>
            </tr>
            <tr>
                <th>Uczeń</th>
                <td>{{ fee.idstudent }}</td>
            </tr>
        </tbody>
    </table>

    <div id="addActions">
            <a href="{{ path('fee_index') }}" class="btn btn-primary"><i class="fa fa-undo fa-lg"></i> Powrót</a>

            <a href="javascript:print()"  class="btn btn-info"><i class="fa fa-print fa-lg"></i> Drukuj</a>

            <a href="{{ path('fee_edit', { 'id': fee.idfee }) }}" class="btn btn-warning"><i class="fa fa-pencil-square fa-lg"></i> Edytuj</a>

            {{ form_start(delete_form) }}
                <input type="submit" value="Usuń"   class="btn btn-danger">
            {{ form_end(delete_form) }}

    </div>
{% endblock %}
